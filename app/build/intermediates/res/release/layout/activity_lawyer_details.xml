<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="25dp"

        android:layout_alignParentTop="true"
        android:background="@color/grey"
        android:orientation="horizontal" >



        <TextView
            android:id="@+id/txtsignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Lawyer Details"
            android:textColor="@color/black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"

        android:orientation="vertical">
        <TextView
            android:id="@+id/texthead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/texthead"
            android:layout_gravity="center"
            android:textColor="@color/blue"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/details1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="company:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue"
            android:layout_weight="1"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtcompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/rectangiular" >

            <requestFocus />
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/details2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details1"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="cell Phone:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue"
            android:layout_weight="1"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtcellphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:background="@drawable/rectangiular" >

            <requestFocus />
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/details3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details2"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Buisness Phone:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue"
            android:layout_weight="1"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtbphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:background="@drawable/rectangiular" >

            <requestFocus />
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/details4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details3"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Email"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue"
            android:layout_weight="1"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/rectangiular" >

            <requestFocus />
        </EditText>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/details5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details4"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Address 1:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue"
            android:layout_weight="1"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtadr1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/rectangiular" >

            <requestFocus />
        </EditText>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/details6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details5"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Address 2:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue"
            android:layout_weight="1"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtadr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/rectangiular" >

            <requestFocus />
        </EditText>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/details7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details6"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="City:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue"
            android:layout_weight="1"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/rectangiular" >

            <requestFocus />

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details7"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="State:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue"
            android:layout_weight="1"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@drawable/rectangiular" >

            <requestFocus />

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details8"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/zipcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Zipcode:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue"
            android:layout_weight="1"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edtzip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:background="@drawable/rectangiular" >

            <requestFocus />

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details9"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Specialities:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue"
            android:layout_weight="1"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="217dp"
            android:layout_height="40dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:entries="@array/specialities"
            android:layout_below="@+id/details9"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <requestFocus />
    </LinearLayout>


    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="@string/submit"
        android:background="@color/blue"
        android:textColor="@color/white" />



</RelativeLayout><!-- From: file:/Users/jaicksninan/AndroidStudioProjects/LawOfDemand1/app/src/main/res/layout/activity_lawyer_details.xml -->